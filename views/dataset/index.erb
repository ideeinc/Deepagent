<!DOCTYPE html>
<%#include "dataset.h" %>
<html>
<head>
  <meta http-equiv="content-type" content="text/html;charset=UTF-8" />
  <title><%= controller()->name() + ": " + controller()->activeAction() %></title>
</head>
<body>

<h1>Listing Dataset</h1>

<%== linkTo("New entry", urla("create")) %><br />
<br />
<table border="1" cellpadding="5" style="border: 1px #d0d0d0 solid; border-collapse: collapse;">
  <tr>
    <th>ID</th>
    <th>Db Path</th>
    <th>Db Type</th>
    <th>Mean Path</th>
  </tr>
<% tfetch(QList<Dataset>, datasetList); %>
<% for (const auto &i : datasetList) { %>
  <tr>
    <td><%= i.id() %></td>
    <td><%= i.dbPath() %></td>
    <td><%= i.dbType() %></td>
    <td><%= i.meanPath() %></td>
    <td>
      <%== linkTo("Show", urla("show", i.id())) %>
      <%== linkTo("Edit", urla("save", i.id())) %>
      <%== linkTo("Remove", urla("remove", i.id()), Tf::Post, "confirm('Are you sure?')") %>
    </td>
  </tr>
<% } %>
</table>

</body>
</html>
