<!DOCTYPE html>
<%#include "dataset.h" %>
<% tfetch(QVariantMap, dataset); %>
<html>
<head>
  <meta http-equiv="content-type" content="text/html;charset=UTF-8" />
  <title><%= controller()->name() + ": " + controller()->activeAction() %></title>
</head>
<body>
<p style="color: red"><%=$ error %></p>
<p style="color: green"><%=$ notice %></p>

<h1>Editing Dataset</h1>

<%== formTag(urla("save", dataset["id"]), Tf::Post) %>
  <p>
    <label>ID<br /><input type="text" name="dataset[id]" value="<%= dataset["id"] %>" readonly="readonly" /></label>
  </p>
  <p>
    <label>Db Path<br /><input type="text" name="dataset[dbPath]" value="<%= dataset["dbPath"] %>" /></label>
  </p>
  <p>
    <label>Db Type<br /><input type="text" name="dataset[dbType]" value="<%= dataset["dbType"] %>" /></label>
  </p>
  <p>
    <label>Mean Path<br /><input type="text" name="dataset[meanPath]" value="<%= dataset["meanPath"] %>" /></label>
  </p>
  <p>
    <input type="submit" value="Update" />
  </p>
</form>

<%== linkTo("Show", urla("show", dataset["id"])) %> |
<%== linkTo("Back", urla("index")) %>
</body>
</html>
