<%#include "neuralnetwork.h" %>
<% tfetch(QVariantMap, neuralNetwork); %>
<html>
<head>
  <meta http-equiv="content-type" content="text/html;charset=UTF-8" />
  <title><%= controller()->name() + ": " + controller()->activeAction() %></title>
</head>
<body>
