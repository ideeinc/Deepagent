<!DOCTYPE html>
<%#include "containers/traincreatecontainer.h" %>
<% tfetch(TrainCreateContainer, container); %>
<% auto caffeModel = container.caffeModel.toVariantMap(); %>
<html>
<head>
  <meta http-equiv="content-type" content="text/html;charset=UTF-8" />
  <title><%= controller()->name() + ": " + controller()->activeAction() %></title>
</head>
<body>
<p style="color: red"><%=$ error %></p>
<p style="color: green"><%=$ notice %></p>

<h1>New Train Model</h1>

<p><%=$ message %></p>

<%== formTag(urla("create"), Tf::Post) %>
  <p>
    <label>name<br /><input name="caffeModel[name]" value="<%= caffeModel["name"] %>" /></label>
  </p>
  <div>
    <label for="caffeModel[dataset]">Select Dataset<br />
      <select name="caffeModel[dataset]" size=6>
        <option>その1</option>
        <option>その2</option>
        <option>その3</option>
      </select>
    </label>
  </p>
  </div>
  <p>
    <label>Solver (solver.prototxt)<br /><textarea name="caffeModel[solverPrototxt]"><%= caffeModel["solverPrototxt"] %></textarea></label>
  </p>
  <p>
    <label for="caffeModel[trainEpochs]">Training epochs</label><br><input name="caffeModel[trainEpochs]" type="text" value="100"/>
  </p>
  <p>
    <label for="caffeModel[snapInterval]">Snapshot interval</label><br><input name="caffeModel[snapInterval]" type="text" value="1"/>
  </p>
  <p>
    <label for="caffeModel[valInterval]">Validation interval</label><br><input name="caffeModel[valInterval]" type="text" value="1"/>
  </p>
  <p>
    <label>Network for training (prototxt)<br /><textarea name="caffeModel[trainPrototxt]"><%= caffeModel["trainPrototxt"] %></textarea></label>
  </p>
  <p>
    <label>pretreined model path<br /><input name="caffeModel[pretrainedModel]" value="<%= caffeModel["pretrainedModel"] %>" /></label>
  </p>
  <p>
    <label>Network for deployment (prototxt)<br /><textarea name="caffeModel[deployPrototxt]"><%= caffeModel["deployPrototxt"] %></textarea></label>
  </p>
  <p>
    <input type="submit" value="Train" />
  </p>
</form>

<%== linkTo("Back", urla("index")) %>

</body>
</html>
